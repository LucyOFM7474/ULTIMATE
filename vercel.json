 {
  "version": 2,
  "builds": [
    { 
      "src": "api/chat.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["api/**"] 
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/chat",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/chat.js"
    },
    { 
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ]
}
